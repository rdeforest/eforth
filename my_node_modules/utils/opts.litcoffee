    fs      = require 'fs'
    path    = require 'path'

    modules = {}
    curDir = path.dirname module.filename

    for fileName in fs.readdirSync curDir
      [name..., ext] = fileName.split '.'
      name = name.join "."

      if require.extensions["." + ext] and
          not (name in ['index', 'opts'])
        modules[name] = path.join 'utils', name

    module.exports = exports = (overrides) ->
      Object.assign exports,
        {modules}
        utils:
                reloadReturnsMod: false
                install: true
                installLogger: ->
                moduleLoadLogger: ->

        repl:
                ignoreUndefined: true

        libs:
                underscore: '__'
                moment: true
                'coffee-script': 'CoffeeScript'

      for k, v of overrides
        Object.assign exports[k], v

      exports
